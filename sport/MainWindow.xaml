<Window x:Class="sport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sport"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Grid.Row="0" Background="#FF76E383">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Image Source="/Resources/logo.ico" HorizontalAlignment="Left" Margin="10" />
            <Label Content="Прокат коньков" HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            </Label>
        </Grid>
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden">
        </Frame>
        
    </Grid>
</Window>
